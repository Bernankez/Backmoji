{
  "name": "@backmoji/monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.5",
  "description": "Flow wallpaper creator.",
  "author": {
    "name": "Cole",
    "email": "bernankeic@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bernankez/backmoji.git"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "clean": "rimraf --glob packages/*/{dist}",
    "dev": "pnpm -F \"./packages/core\" dev && pnpm -F \"./playground\" dev",
    "build": "pnpm clean && pnpm -r -F \"./packages/*\" build",
    "release": "bumpp -r",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit && pnpm -F \"./playground\" typecheck",
    "lint": "eslint .",
    "fix": "eslint . --fix"
  },
  "devDependencies": {
    "@bernankez/eslint-config": "^0.7.4",
    "@types/node": "^20.11.30",
    "bumpp": "^9.4.0",
    "eslint": "^8.57.0",
    "happy-dom": "^14.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "unbuild": "^2.0.0",
    "vite": "^5.1.6",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.4.0"
  },
  "lint-staged": {
    "*": [
      "eslint --fix"
    ]
  }
}