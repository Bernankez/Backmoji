{
  "name": "@backmoji/monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.5",
  "description": "Flow wallpaper creator.",
  "author": {
    "name": "Cole",
    "email": "bernankeic@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bernankez/backmoji.git"
  },
  "scripts": {
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm build",
    "clean": "rimraf --glob packages/*/{dist}",
    "play": "pnpm -F \"./playground\" dev",
    "play:build": "pnpm -F \"./playground\" build",
    "dev": "pnpm -F \"./packages/core\" dev && pnpm play",
    "build": "pnpm clean && pnpm -r -F \"./packages/*\" build && pnpm play:build",
    "release": "bumpp -r",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit && pnpm -F \"./playground\" typecheck",
    "lint": "eslint .",
    "fix": "eslint . --fix"
  },
  "devDependencies": {
    "@bernankez/eslint-config": "^0.7.4",
    "@types/node": "^20.11.30",
    "bumpp": "^9.4.0",
    "eslint": "^8.57.0",
    "happy-dom": "^14.0.0",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.11.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "unbuild": "^2.0.0",
    "vite": "^5.1.6",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.4.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --fix"
    ]
  }
}