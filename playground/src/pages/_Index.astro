---
import type { MarkdownLayoutProps } from "astro";
import Layout from "../layouts/Layout.astro";
import { Background } from "../components/Background";
import Welcome from "@/components/Welcome.astro";
import "@shikijs/twoslash/style-rich.css";

type Props = MarkdownLayoutProps<{
  title: string;
}>;

const { title = "Backmoji" } = Astro.props.frontmatter || Astro.props;
---

<Layout title={title}>
  <div id="root">
    <Background client:only="react"></Background>
    <Welcome></Welcome>
    <main class="w-full flex justify-center">
      <section class="max-w-5xl w-full">
        <div class="max-w-5xl p-4 text-base prose prose-orange md:text-lg dark:prose-invert">
          <slot />
        </div>
      </section>
    </main>
  </div>
</Layout>

<style is:global>
#root {
  height: 100vh;
  height: 100dvh;
  width: 100vw;
  overflow-x: hidden;
}
</style>
